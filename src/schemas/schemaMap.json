{
  "weather": {
    "description": "Get the current weather in a given city.",
    "parameters": {
      "type": "object",
      "properties": {
        "location": {
          "type": "string",
          "description": "The city and state, e.g., San Francisco, CA"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "unit": {
          "type": "string",
          "enum": ["celsius", "fahrenheit"],
          "description": "Temperature unit to return"
        },
        "unitValue": {
          "type": "string",
          "format": "decimal",
          "description": "Temperature unit to return"
        }
      }
    }
  },
  "images": {
    "type": "object",
    "properties": {
      "url": {
        "type": "string",
        "description": "url of the image"
      },
      "mimetype": {
        "type": "string",
        "enum": ["jpg", "png"],
        "description": "url of the image"
      }
    }
  },
  "user": {
    "description": "User information",
    "parameters": {
      "type": "object",
      "properties": {
        "images": {
          "type": "array",
          "description": "List of user images",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "description": "url of the image"
              }
            }
          }
        },
        "name": {
          "type": "string",
          "description": "Name of the user"
        },
        "email": {
          "type": "string",
          "description": "Email of the user"
        },
        "additionalUserInformation": {
          "type": "object",
          "properties": {
            "lastName": {
              "type": "string",
              "description": "Last Name of the user"
            },
            "externalInformation": {
              "type": "object",
              "properties": {
                "marriageStatus": {
                  "type": "string",
                  "description": "Marriage Status of the user"
                }
              }
            }
          }
        }
      },
      "required": ["name"]
    }
  }
}
